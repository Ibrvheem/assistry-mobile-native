{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx", // ðŸ‘ˆ important for RN + Expo SDK 49+
    "types": [
      "react",
      "react-native"
    ],
    "lib": [
      "esnext",
